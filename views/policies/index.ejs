<% blocks.title=__('policies') %>
    <div class="row heading-bg bg-primary">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h5 class="txt-light text-capitalize"><%= __('policies') %></h5>
        </div>
    </div>
    <style>
        .app-icon-wrap .connection-item {
            display: inline-block;
            padding: 10px 25px;
            text-align: center;
            color: #5c5c5c;
            text-transform: capitalize;
        }

        .app-icon-wrap .connection-item:hover {
            color: #2f2c2c;
            background: #eee;
        }

        .app-icon-wrap .connection-item i {
            font-size: 65px;
        }
    </style>
    <div class="app-icon-wrap">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default card-view text-center">
                    <a href="/policies/privacy" class="connection-item">
                        <i class="fa fa-lock"></i>
                        <span class="block h4 text-capitalize"><%= __('privacy') %></span>
                    </a>
                    <a href="/policies/terms" class="connection-item">
                        <i class="fa fa-handshake-o"></i>
                        <span class="block h4 text-capitalize"><%= __('terms and conditions') %></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
