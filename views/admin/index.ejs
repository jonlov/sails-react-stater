<div class="app-icon-wrap">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default card-view text-center">
            <% _.each(_.keys(sails.models), function(model) {
                if(model.split('__').length === 1) { %>
                <a href="/admin/<%= model %>" class="connection-item">
                <i class="fa fa-<%= model %> "></i>
                <span class="block h4"><%= model %>s</span>
